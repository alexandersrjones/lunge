<header>
	<style>
    
		.navbar-default {
		  width: 100%;
		  height: 100%;
		  padding: 6px;
          background-color: rgba(255, 255, 255, 0.0) !IMPORTANT;
          border-color: rgba(255, 255, 255, 0.0) !IMPORTANT;
		}

        #menuContainerLeft {
            display: inline; 
            float: left;  
            margin-top: 10px;
            margin-left: 10px;
            margin-right: 10px;
        }

        #menuContainerRight {
            display: inline;  
            float: right;  
            margin-top: 10px;
            margin-left: 10px;
            margin-right: 10px;
        }

        .menuItem {
            display: inline;
            
        }

		#navbar {
			background-color: white;
		}

        #logoImg {
            height:8vh;
            display: inline;
        }



        #navSearch {
            display: inline;
            height: 43px;
            padding: 10px 18px;
            font-size: 15px;
            line-height: 1.42857143;
            color: #333333;
            background-color: #ffffff;
            background-image: none;
            border: 1px solid #cccccc;
            border-radius: 0;
            -webkit-box-shadow: inset 0 1px 1px rgba(0,0,0,0.075);
            box-shadow: inset 0 1px 1px rgba(0,0,0,0.075);
            -webkit-transition: border-color ease-in-out .15s,-webkit-box-shadow ease-in-out .15s;
            -o-transition: border-color ease-in-out .15s,box-shadow ease-in-out .15s;
            transition: border-color ease-in-out .15s,box-shadow ease-in-out .15s;
            margin-left: 30px;
            margin-right: 3px;
            width: 30vw;
        }

        .navButtons {
            display: inline;
            padding: 10px 18px;
            font-size: 17px;
            line-height: 1.43;
            color: white;
            background-color: #7AC043;
            background-image: none;
            border: 1px solid #7AC043;
            border-radius: 10px;
            -webkit-box-shadow: inset 0 1px 1px rgba(0,0,0,0.075);
            box-shadow: inset 0 1px 1px rgba(0,0,0,0.075);
            -webkit-transition: border-color ease-in-out .15s,-webkit-box-shadow ease-in-out .15s;
            -o-transition: border-color ease-in-out .15s,box-shadow ease-in-out .15s;
            transition: border-color ease-in-out .15s,box-shadow ease-in-out .15s;
        }

        .navButtons:hover {
            background-color: #a0e36f;
            transition: 0.3s;
            border: 1px solid #a0e36f;
        }

	</style>
    <nav class="navbar navbar-default">
        <div class="container-fluid">

            <div id="navbar">
                
                <div id="menuContainerLeft">
                    
                    <form  method="get" >
                        <a href="/"><img id="logoImg" src="imgs/lunge.png"></a>
                        <input id="navSearch" placeholder="Search">
                        <button type="submit" id="navSubmit" class="navButtons">
                            <span class="glyphicon glyphicon-search" style="color:white"></span>
                        </button> 
                    </form>
                </div> 

                <div id="menuContainerRight">
                    <form action="/sellerPage" id="getHome" class="menuItem" method="get">
                        <input id="sellerButton" class="navButtons" type="submit" value="My Page" />
                    </form>
                    <form action="/signIn" id="getHome2" class="menuItem" method="get">
                        <input id="signInButton" class="navButtons" type="submit" value="Sign In/Register" />
                    </form>
                </div>  
            
            </div>
        </div>
        
    </nav>

</header>
